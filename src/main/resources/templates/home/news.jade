doctype html
html
	head
		meta(charset="utf-8")
		title= title
		include general-includes.jade
		link(rel='stylesheet', href='/css/main-page/main-page.css')

		link(href='http://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.css', rel='stylesheet')
		script(src='http://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.js')

	body
		include forms/header.jade

		include forms/sliders/slider-under-header.jade
		include forms/content-slider.jade

		div.tabs
			div.tab-container.tab-container-titles
				//-Разделитель 
				p.tab-title-delimiter
				//-Надпись 
				p.tab-title-clarification.tab-title-text НОВОСТИ
				//- Наполнение контентом новостей
				each tmp in content
					+add-title-part(tmp.creatingDate, tmp.title, tmp.miniContent)

			div.tab-container.tab-container-content
				each tmp in content
					+add-content-part(tmp.description)
							
		div.footer
			div.copyright
				p(style='color:#ffffff') 2015 © ИМИТ ОмГУ им. Ф.М. Достоевского
			div.social-net
				a(href='https://www.youtube.com/user/IMITOmsk')
					img(src='/img/logo/yt.png')
				a(href='http://imit_omsu.livejournal.com/')
					img(src='/img/logo/lj.png')
				a(href='http://vk.com/imit_omsu')
					img(src='/img/logo/vk.png')
			div.info-about-faculty
				.info-about-faculty-line
					img(src='/img/logo/map.png')
				.info-about-faculty-line
					p(style='color:#ffffff')   Пр.Мира 55
				br
				.info-img-and-text
